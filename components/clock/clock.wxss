.clock-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30px;
  background: linear-gradient(135deg, #1a1f25 0%, #2c3e50 100%);
  border-radius: 25px;
  box-shadow: 0 0 30px rgba(0, 255, 255, 0.1),
              inset 0 0 15px rgba(0, 255, 255, 0.05);
  width: 360px;
  min-height: 400px;
  transition: all 0.3s ease;
  border: 1px solid rgba(0, 255, 255, 0.1);
  position: relative;
  overflow: hidden;
}

.clock-container::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(0, 255, 255, 0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
  pointer-events: none;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.clock-container.landscape {
  flex-direction: row;
  justify-content: space-between;
  width: 600px;
  min-height: 200px;
  padding: 25px 40px;
}

.time-section {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
  background: rgba(0, 255, 255, 0.05);
  padding: 20px 30px;
  border-radius: 20px;
  box-shadow: 0 0 20px rgba(0, 255, 255, 0.1);
  border: 1px solid rgba(0, 255, 255, 0.1);
  position: relative;
  overflow: hidden;
  width: 300px;
  justify-content: center;
}

.time-section::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.1), transparent);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% {
    left: -100%;
  }
  20% {
    left: 100%;
  }
  100% {
    left: 100%;
  }
}

.landscape .time-section {
  margin-bottom: 0;
  margin-right: 20px;
  width: 250px;
}

.time {
  font-size: 64px;
  font-weight: 700;
  color: #00ffff;
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  letter-spacing: 2px;
  text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
  white-space: nowrap;
}

.period {
  font-size: 24px;
  color: #00ffff;
  margin-left: 12px;
  font-weight: 600;
  background: rgba(0, 255, 255, 0.1);
  padding: 4px 12px;
  border-radius: 8px;
  border: 1px solid rgba(0, 255, 255, 0.2);
  text-shadow: 0 0 5px rgba(0, 255, 255, 0.5);
}

.date-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 25px;
  width: 300px;
}

.landscape .date-section {
  margin-bottom: 0;
  margin-right: 20px;
  align-items: flex-start;
  width: 200px;
}

.date {
  font-size: 22px;
  color: #00ffff;
  margin-bottom: 8px;
  font-weight: 500;
  background: rgba(0, 255, 255, 0.05);
  padding: 8px 16px;
  border-radius: 12px;
  border: 1px solid rgba(0, 255, 255, 0.1);
  text-shadow: 0 0 5px rgba(0, 255, 255, 0.3);
  white-space: nowrap;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.weekday {
  font-size: 20px;
  color: rgba(0, 255, 255, 0.8);
  font-weight: 500;
  background: rgba(0, 255, 255, 0.05);
  padding: 6px 12px;
  border-radius: 10px;
  border: 1px solid rgba(0, 255, 255, 0.1);
  white-space: nowrap;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.button-group {
  display: flex;
  gap: 12px;
  margin-top: 15px;
  width: 100%;
  justify-content: center;
}

.landscape .button-group {
  margin-top: 0;
  flex-direction: column;
  width: auto;
}

.format-toggle,
.orientation-toggle {
  padding: 12px 24px;
  font-size: 16px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  border-radius: 25px;
  text-align: center;
  white-space: nowrap;
  border: 1px solid rgba(0, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
  min-width: 140px;
}

.format-toggle::before,
.orientation-toggle::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(45deg, #00ffff, #00bfff);
  z-index: -1;
  border-radius: 26px;
  opacity: 0.3;
}

.format-toggle {
  background: rgba(0, 255, 255, 0.1);
  color: #00ffff;
  box-shadow: 0 0 15px rgba(0, 255, 255, 0.2);
}

.orientation-toggle {
  background: rgba(0, 255, 255, 0.1);
  color: #00ffff;
  box-shadow: 0 0 15px rgba(0, 255, 255, 0.2);
}

.format-toggle:active,
.orientation-toggle:active {
  transform: scale(0.95);
  box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
} 